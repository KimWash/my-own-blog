{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "../../packages/db/types"],
    "types": ["global"],
    "paths": {
      "@/*": ["./*"],
      "@core/*": ["../../packages/core/*"],
      "@db/*": ["../../packages/db/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
