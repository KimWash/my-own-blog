{
  "extends": "./tsconfig.spec.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,

    "outDir": "./dist",
    "baseUrl": "./",
    "composite": true,
  },
  "references": [
    {"path": "./packages/app/client"},
    {"path": "./packages/lib/core"},
    {"path": "./packages/lib/db"},
  ],

}
